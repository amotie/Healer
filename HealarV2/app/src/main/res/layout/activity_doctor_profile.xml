<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorProfile"
    android:orientation="vertical"
    android:background="@drawable/background_gradiant">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
<ImageView
    android:layout_width="270dp"
    android:layout_height="312dp"
    android:src="@drawable/doctor"
    android:scaleType="centerCrop"
    android:layout_gravity="center"


    />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="33dp"
        android:layout_marginBottom="-33dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALi Motie"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="26sp"
                android:id="@+id/DoctorName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dentest"
                android:layout_marginStart="20dp"
                android:textSize="15sp"/>



        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                >
            <ImageView
                android:layout_width="33.02dp"
                android:layout_height="31.43dp"
                android:src="@drawable/ic_near_me_primarycolor_24dp"
                android:layout_gravity="center"
               />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.7KM"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp">
                    <ImageView
                        android:layout_width="33.02dp"
                        android:layout_height="31.43dp"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/search_rating"
                android:layout_width="24.28dp"
                android:layout_height="22.5dp"
                android:src="@drawable/ic_star_border_black_24dp"

               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/doctorRatingtext"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginStart="15dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="About"
                   android:textColor="#000000"
                   android:textSize="25sp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="The Doctor races to return to Earth fearing that The Master will return.However, the Master turns everyone on Earth  into his own image. Little does he realize the greater danger that awaits him?"
                   android:maxLines="5"
                   />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textColor="#000000"
                    android:textSize="25sp"

                    />
                <RatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true"
                    android:progressTint="@color/colorPrimary"
                    android:layout_alignParentEnd="true"
                    style="@android:style/Widget.Material.RatingBar.Small"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/doctor"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samia Gamal"
                        android:textColor="#000000"
                      />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25-11-2018"/>
                    </LinearLayout>
                   </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Good Doctor would really like to make you feel good.
And that's not always a good thing. ABC's new medical drama"
                    android:maxLines="3"
                    />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:layout_width="251dp"
            android:layout_height="51dp"
            android:layout_gravity="center|bottom"
            android:text="Book Appointment"
            android:background="@drawable/buttonlogin"
            android:textColor="#ffff"
            android:layout_marginBottom="60dp"
            />
    </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>